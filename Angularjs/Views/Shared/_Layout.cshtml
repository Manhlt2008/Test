<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <meta name="viewport" content="width=device-width" />
        
        <script src="~/Scripts/jquery-3.1.0.js"></script>
        @*angularjs*@
       
        <script src="~/AngularApp/Components/angular.min.js"></script>
        <script src="~/Scripts/angular-route.min.js"></script> @*add mới dùng được route*@
        @*<script src="~/AngularApp/master.js"></script>*@

        <script src="~/AngularApp/app.js"></script>

        @*style*@
        <link href="~/Content/Styles/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/Styles/polyad.css" rel="stylesheet" />
        <link href="~/Content/Styles/fix.css" rel="stylesheet" />
        
        <script src="~/AngularApp/bootstrap.min.js"></script>
        <script src="~/AngularApp/main-script.js"></script>

    </head>
    <body>
        <header></header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper none">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - FO</p>
                </div>
            </div>
        </footer>
    </body>
</html>
